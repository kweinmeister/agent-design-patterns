{% extends "base.html.j2" %}
{% block content %}
  <div class="container">
    <div class="input-section">
      <p class="pattern-description">
        {% block pattern_desc %}
        {% endblock pattern_desc %}
      </p>
      <form action="{%- block form_action -%}{%- endblock form_action -%}"
            method="get"
            class="run-form">
        <input type="text"
               name="prompt"
               class="form-input"
               value="{{ prompt }}"
               placeholder="{%- block placeholder -%}{%- endblock placeholder -%}" />
        <button type="submit" class="btn-primary">Run Agent</button>
      </form>
    </div>
    {% block results %}
    {% endblock results %}
  </div>
{% endblock content %}
