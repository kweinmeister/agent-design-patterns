{% extends "simple_agent_layout.html.j2" %}
{% block title %}
  {{ pattern.name }}
{% endblock title %}
{% block pattern_name %}
  {{ pattern.name }}
{% endblock pattern_name %}
{% block pattern_desc %}
  {{ pattern.description }}. Try asking "What is 123 * 456?" or "Calculate 50 / 2".
{% endblock pattern_desc %}
{% block form_action %}
  /demo/{{ pattern.id }}
{% endblock form_action %}
{% block
  placeholder %}
  Enter a math question...
{% endblock placeholder %}
{% block results %}
  {% if
    result %}
    <div class="results-grid">
      {% for step in result.history %}
        <div class="result-card">
          <h3>{{ step.role }}</h3>
          <div class="content">{{ step.content }}</div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
{% endblock results %}
